<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_group"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fenfei.myapplicationdemo.ui.CustomGroupActivity">


    <com.fenfei.myapplicationdemo.views.CustomViewgroup
        android:layout_width="match_parent"
        android:id="@+id/viewgroup"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:text="hello"
            android:id="@+id/tv_click"
            android:layout_height="100dp"/>

    </com.fenfei.myapplicationdemo.views.CustomViewgroup>


    <Button
        android:layout_width="wrap_content"
        android:text="scroll by"
        android:id="@+id/scroll_by"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_width="wrap_content"
        android:text="scroll to"
        android:id="@+id/scroll_to"
        android:layout_height="wrap_content"/>


</LinearLayout>
