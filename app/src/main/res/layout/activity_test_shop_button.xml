<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_test_shop_button"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.fenfei.myapplicationdemo.ui.TestShopButtonActivity">


    <com.fenfei.myapplicationdemo.views.ShopButton
        android:layout_width="200dp"
        android:id="@+id/shop_button"
        android:layout_height="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:text="test"
        android:id="@+id/test"
        android:layout_height="wrap_content"/>


    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:src="@mipmap/test_image"
            android:layout_height="180dp"/>

    </android.support.v7.widget.CardView>
    <!-- ============================== -->
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:background="#ff00"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:id="@+id/glide_img"
            android:scaleType="centerCrop"
            android:layout_height="200dp"/>

    </android.support.v7.widget.CardView>



    <com.fenfei.myapplicationdemo.views.CircleMenu
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:background="#ff0"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="A"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="B"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="C"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="D"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="E"
            android:layout_height="wrap_content"/>

    </com.fenfei.myapplicationdemo.views.CircleMenu>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scroll_view_"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="A"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="B"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="C"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="D"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="E"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="F"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="G"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="H"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="I"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="J"
                android:layout_height="50dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
